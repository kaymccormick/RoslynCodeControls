<Window x:Class="WpfTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestApp"
        xmlns:roslynCodeControls="clr-namespace:RoslynCodeControls;assembly=RoslynCodeControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions><RowDefinition Height="*"/>
        <RowDefinition Height="Auto"></RowDefinition></Grid.RowDefinitions>
        <Border BorderBrush="BlueViolet" BorderThickness="3">
        <roslynCodeControls:RoslynCodeControl FontSize="24" FontFamily="Lucida Console"  xml:space="preserve" x:Name="CodeControl">
</roslynCodeControls:RoslynCodeControl>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" TextElement.FontSize="24">
            <TextBlock Text="{Binding ElementName=CodeControl,Path=InsertionPoint}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
